<%= form_with(model: @post, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%# <%= f.label :title, class: 'mb-3' %> 
  <%= f.text_field :title, class: 'form-control form-control-lg mt-4', placeholder: "title" %>

  <%# <%= f.label :tag, class: 'mb-3  form-label' %> 
  <%= f.select :tag, ["移住", "ドイツ語", "生活", "食べ物", "街並み"], class: "form-control mt-4" %>

  <div class="field">
    <%= f.text_area :content, placeholder: "あなたのベルリンでの経験をシェアしよう。", class: "form-control mt-4", id: "exampleFormControlTextarea1" %>
  </div>

 <%# サムネイル %>
   <%= f.label :image, class: "mt-4" %> 
  <%= f.file_field :image, class: "form-control" %> 

  <%= f.submit "あなたの経験を読者に再び届ける", class: "btn btn-primary mt-4" %>

<% end %>