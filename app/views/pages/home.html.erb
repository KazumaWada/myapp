<%= render 'layouts/header' %>

<div class="container mt-4">
 <div class="row">

<div class="col-md-8">

<h3 class="text-center">ベルリンなうとは？</h3>
 
 <main class="p-3">
  <!-- タブ -->
  <ul class="nav nav-justified">
    <li class="nav-item bg-dark">
      <a href="#new" class="nav-link text-white" data-toggle="tab">新着</a>
    </li>
    <li class="nav-item bg-danger">
      <a href="#popular" class="nav-link text-white" data-toggle="tab">人気</a>
    </li>
    <li class="nav-item bg-warning">
      <a href="#news" class="nav-link text-white" data-toggle="tab">アクセス数</a>
    </li>
  </ul>

<!-- 投稿部分 -->
  <div class="tab-content">
    <div id="new" class="tab-pane active">
   <%# ここから1 %>
   <%= render partial: 'posts/index', locals: { posts: @posts, user: @user } %>
   <%# ここまで1 %>
    </div>
    <div id="popular" class="tab-pane">
    <%# ここから2 %>
    <div class="card mt-4">
      <%= image_tag 'the-main.jpg', class: "img-fluid" %>
      <div class="card-body">
        <h5 class="card-title">人気投稿</h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      </div>
    </div>
    <%# ここまで2 %>
    </div>
    <div id="news" class="tab-pane">
    <%# ここから3 %>
    <%= link_to @news_output['articles'][0]['url'], target: "_blank" do %> 

    <div class="card mt-4">

      <% if @news_output['articles'][0]['urlToImage'].nil? %>
      <%= image_tag "no_image.png", class: 'img-fluid'%>
      <% else %>
      <%= image_tag @news_output['articles'][0]['urlToImage'], class: "img-fluid" %>
      <% end %>
      

      <div class="card-body">
      <small><%= @news_output['articles'][0]['publishedAt'] %></small>
        <h5 class="card-title"><%= @news_output['articles'][0]['title'] %></h5>
        <p class="card-text"><%= @news_output['articles'][0]['discription'] %></p>
      </div>

     </div>
<% end %>
   

     <%= link_to @news_output['articles'][1]['url'], target: "_blank" do %> 

    <div class="card mt-4">

      <% if @news_output['articles'][1]['urlToImage'].nil? %>
      <%= image_tag "no_image.png", class: 'img-fluid'%>
      <% else %>
      <%= image_tag @news_output['articles'][1]['urlToImage'], class: "img-fluid" %>
      <% end %>
      

      <div class="card-body">
        <h5 class="card-title"><%= @news_output['articles'][1]['title'] %></h5>
        <p class="card-text"><%= @news_output['articles'][1]['discription'] %></p>
      </div>

     </div>
<% end %>

   <%= link_to @news_output['articles'][2]['url'], target: "_blank" do %> 

    <div class="card mt-4">

      <% if @news_output['articles'][2]['urlToImage'].nil? %>
      <%= image_tag "no_image.png", class: 'img-fluid'%>
      <% else %>
      <%= image_tag @news_output['articles'][2]['urlToImage'], class: "img-fluid" %>
      <% end %>
      

      <div class="card-body">
        <h5 class="card-title"><%= @news_output['articles'][2]['title'] %></h5>
        <p class="card-text"><%= @news_output['articles'][2]['discription'] %></p>
      </div>

     </div>
<% end %>
    <%# ここまで3 %>
    </div>
  </div>
</main>
</div><%# col-md-8 %>

  
<div class="col-md-4 mt-4">
  
 <ul class="list-group">
 <li class="list-group-item">
  <%= render partial: 'shared/select_tag' %>
  </li>
 <li class="list-group-item"><h4><h4>現在の<%= @output['name'] %>天気</h4></h4></li>
 <li class="list-group-item">
 <%#天気ここから %>
<%= render partial: 'shared/weather_api', locals: { output: @output } %>
  <%#天気ここまで %>
 </li>
 <li class="list-group-item"><h4>ニュース</h4><span>(もっと見る)</span></li>
  <li class="list-group-item">
   <%= render partial: 'shared/news_api', locals: { news_output: @news_output } %>
  </li>
  <li class="list-group-item">Po</li>
  <li class="list-group-item">Ves</li>
</ul>

</div> 

 </div><%# row %>
</div><%# container %>




































   





