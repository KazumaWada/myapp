<div class="text-center">
<h1>ユーザー一覧</h1>
</div>

<% @users.each do |user| %> 
  
<li class="mt-2">

 <% if user.avatar? %>
     <%= image_tag user.avatar.url, class: "rounded-circle ", width: "40px", height: "40px" %>
     <% else %>
     <%= image_tag "the-main.jpg", class: "rounded-circle", width: "40px", height: "40px" %>
     <% end %>  <%# avatar %>
  
  <%= link_to user.name, user %>

  <% if user.name == "簡単ログインしたユーザー" %>
  | <%= link_to "このユーザーは削除することができません", users_path %>
  <% elsif current_user?(user) %> 
    | <%= link_to "アカウントを削除する", user, method: :delete,
                                  data: { confirm: "アカウントを削除しますか？" } %>
  <% end %> <%# if %>
</li>

  <% end %>  <%# each %>  




