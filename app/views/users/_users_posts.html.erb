<div id="post" class="tab-pane active">　　
  <% if @user.posts.exists? %>　
　    <% @user.posts.each do |post| %>
      <%# <div class="card" style="width: 50rem;"> %>
      <div class="card">
      <%# サムネイル画像 %>
      <%= link_to post_path(post) do %> 
      <% if post.image? %>
       <%= image_tag post.image.url, class: 'card-img-top' %>
      <% else %>
      <%= image_tag "the-mainn.jpg", class: 'card-img-top'%>
      <% end %>
      <% end %>

  <div class="card-body">
  　<%# タイトル %>
  　<%= post.title %> 
    
   　<div class="card-text">
　　　<%# アバター %>
     <%= link_to user_path(post.user) do %>
     <span>
     <% if post.user.avatar? %>
     <%= image_tag post.user.avatar.url, class: "rounded-circle ", width: "40px", height: "40px" %>
     <% else %>
     <%= image_tag "the-main.jpg", class: "rounded-circle", width: "40px", height: "40px" %>
     <% end %>
     <%# 名前 %>
     <%= post.user.name %>
    </span>
    <% end %>
    </div>
    <h4 class="card-text">
    <%#view数 %>
    <i class="fas fa-eye"><%= post.impressions_count %></i>
    </h4><%#card-text %>
    <%#コロナ %>
    時期:<%= post.covid %>
    <%#いいね %>
    <%# このファイル内のpostをこのループ内で定義されたpostに変換 %>
    <%= render 'shared/likes', post: post %> 
    </p>
    
    <div class="card-text">
    <%# 投稿日 %>
    <span class="timestamp">
  　 <%= time_ago_in_words(post.created_at) %> 前
    </span>

    <% if current_user?(@user) %>
    <%#編集 %>
    <div class="card-text">
    <%= link_to edit_post_path(post) do %>
    <p><i class="fas fa-edit"></i></p>
    <% end %>
    </div>
    <%# 削除 %>
    <%= link_to post, method: :delete, data: { confirm: "削除してよろしいですか?" } do %>
    <i class="fas fa-trash"></i>
    <% end %>
    <% end %><%# current_user %>

　　 </div><%# card-text %>
      </div><%# card-body %>
     </div><%# card %>
     <% end %><%# each %>
     <% else %>
     <div class="text-canter">
     <p>まだ投稿がありません。<p>
     <%= link_to '投稿する', new_post_path %>
     </div>
     <% end %>
   </div>
