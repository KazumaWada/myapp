<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <p><%= link_to "#{comment.user.name}", user_path(comment.user.id) %>さんのコメント</p>
    <p><%= comment.content %></p>
     <% if comment.user == current_user %>　　　　　　　　　　<%##post/1/comment32とかのため。 %>
      <p><%= link_to 'コメントを削除する', post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %></p>
    <% end %>
  <% end %>
<% end %>
